<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600" prefWidth="1024" style="-fx-background-color: #f6f8fb;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.dacs4_v2.viewModels.HistoryController">
    <!-- Sidebar -->
    <left>
        <VBox prefWidth="220" spacing="8" style="-fx-background-color: white; -fx-padding: 24 16;">
            <children>
                <Label style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #094c4c;" text="Go Game Online" />
                <Separator />

                <ToggleButton maxWidth="Infinity" onAction="#onGoDashboard" 
                    style="-fx-cursor: hand; -fx-background-color: transparent; -fx-text-fill: #374151; -fx-background-radius: 8;" text="Dashboard" />
                <ToggleButton maxWidth="Infinity" onAction="#onGoRooms" 
                    style="-fx-cursor: hand; -fx-background-color: transparent; -fx-text-fill: #374151; -fx-background-radius: 8;" text="Games" />
                <ToggleButton maxWidth="Infinity" onAction="#onGoHistory" selected="true" 
                    style="-fx-cursor: hand; -fx-background-color: #e0f2fe; -fx-text-fill: #0369a1; -fx-font-weight: bold; -fx-background-radius: 8;" text="History" />

                <Pane VBox.vgrow="ALWAYS" />
            </children>
        </VBox>
    </left>

    <!-- Main content -->
    <center>
        <VBox spacing="16" style="-fx-padding: 24;">
            <children>
                <!-- Top bar -->
                <HBox alignment="CENTER_LEFT" spacing="16">
                    <children>
                        <Label style="-fx-font-size: 22; -fx-font-weight: bold;" text="ðŸ“œ Game History" HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>

                <!-- Games list -->
                <ScrollPane fitToWidth="true" hbarPolicy="NEVER" VBox.vgrow="ALWAYS">
                    <content>
                        <FlowPane fx:id="historyFlow" hgap="16" vgap="16">
                            <padding>
                                <Insets bottom="4" left="4" right="4" top="4" />
                            </padding>
                        </FlowPane>
                    </content>
                </ScrollPane>
            </children>
        </VBox>
    </center>
</BorderPane>
