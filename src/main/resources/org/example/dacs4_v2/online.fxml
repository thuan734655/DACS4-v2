<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600" prefWidth="1024" style="-fx-background-color: #f6f8fb;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.dacs4_v2.viewModels.OnlineController">
    <!-- Sidebar -->
    <left>
        <VBox prefWidth="220" spacing="8" style="-fx-background-color: white; -fx-padding: 24 16;">
            <children>
                <Label style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #094c4c;" text="Go Game Online" />
                <Separator />
                <ToggleButton maxWidth="Infinity" onAction="#onGoRooms" text="Rooms" />
                <ToggleButton maxWidth="Infinity" onAction="#onGoOnline" selected="true" text="Online" />

                <Pane VBox.vgrow="ALWAYS" />

                <Separator />
                <Button maxWidth="Infinity" style="-fx-text-fill: #e04545;" text="Logout" />
            </children>
        </VBox>
    </left>

    <!-- Main content -->
    <center>
        <VBox spacing="16" style="-fx-padding: 24;">
            <children>
                <!-- Header -->
                <HBox alignment="CENTER_RIGHT" spacing="16">
                    <children>
                        <VBox spacing="4" HBox.hgrow="ALWAYS">
                            <children>
                                <Label style="-fx-font-size: 22; -fx-font-weight: bold;" text="Online Players" />
                            </children>
                        </VBox>
                        <Label fx:id="lblUserInfo" style="-fx-text-fill: #374151;" text="Guest" />
                        <Label style="-fx-background-color: #e1f8e9; -fx-text-fill: #1b9a55; -fx-padding: 6 12; -fx-background-radius: 999;" text="Online" />
                    </children>
                </HBox>

                <!-- Players list -->
                <ScrollPane fitToWidth="true" hbarPolicy="NEVER" VBox.vgrow="ALWAYS">
                    <content>
                        <VBox fx:id="playersContainer" spacing="12" style="-fx-padding: 4;" />
                    </content>
                </ScrollPane>
            </children>
        </VBox>
    </center>
</BorderPane>
