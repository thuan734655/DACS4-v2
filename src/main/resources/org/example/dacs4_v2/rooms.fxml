<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.dacs4_v2.viewModels.RoomsController"
            prefWidth="1024" prefHeight="600" style="-fx-background-color: #f6f8fb;">
    <!-- Sidebar -->
    <left>
        <VBox spacing="8" prefWidth="220" style="-fx-background-color: white; -fx-padding: 24 16;">
            <children>
                <Label text="Go Game Online" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #094c4c;"/>
                <Separator/>

                <ToggleButton text="Dashboard" maxWidth="Infinity" styleClass="nav-button" onAction="#onGoDashboard"/>
                <ToggleButton text="Play Game" maxWidth="Infinity" styleClass="nav-button"/>
                <ToggleButton text="Rooms" maxWidth="Infinity" selected="true" styleClass="nav-button-selected" onAction="#onGoRooms"/>
                <ToggleButton text="Online" maxWidth="Infinity" styleClass="nav-button" onAction="#onGoOnline"/>
                <ToggleButton text="Statistics" maxWidth="Infinity" styleClass="nav-button"/>

                <Pane VBox.vgrow="ALWAYS"/>

                <Separator/>
                <Button text="Settings" maxWidth="Infinity"/>
                <Button text="Logout" maxWidth="Infinity" style="-fx-text-fill: #e04545;"/>
            </children>
        </VBox>
    </left>

    <!-- Top bar + content -->
    <center>
        <VBox spacing="16" style="-fx-padding: 24;">
            <children>
                <!-- Top bar -->
                <HBox alignment="CENTER_RIGHT" spacing="16">
                    <children>
                        <Label text="Available Rooms" style="-fx-font-size: 22; -fx-font-weight: bold;" HBox.hgrow="ALWAYS"/>
                        <Label text="Online" style="-fx-background-color: #e1f8e9; -fx-text-fill: #1b9a55; -fx-padding: 6 12; -fx-background-radius: 999;"/>
                        <Button text="Play AI" style="-fx-background-color: #ffe3d1; -fx-text-fill: #d96b2b; -fx-background-radius: 999;"/>
                        <Button text="Create Room" style="-fx-background-color: #005b63; -fx-text-fill: white; -fx-background-radius: 999;" onAction="#onCreateRoom"/>
                    </children>
                </HBox>

                <!-- Search & filters -->
                <HBox spacing="12" alignment="CENTER_LEFT">
                    <children>
                        <TextField fx:id="searchField" promptText="Search rooms..." HBox.hgrow="ALWAYS"/>
                        <ToggleButton text="All" selected="true"/>
                        <ToggleButton text="Available"/>
                        <ToggleButton text="Ranked"/>
                    </children>
                </HBox>

                <!-- Rooms list -->
                <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" hbarPolicy="NEVER">
                    <content>
                        <FlowPane hgap="16" vgap="16">
                            <padding>
                                <Insets top="4" right="4" bottom="4" left="4"/>
                            </padding>

                            <!-- Example room card -->
                            <children>
                                <VBox prefWidth="340" spacing="12" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.04), 8, 0.1, 0, 2);">
                                    <children>
                                        <HBox alignment="CENTER_LEFT" spacing="8">
                                            <children>
                                                <Label text="Casual Game 19x19" style="-fx-font-size: 16; -fx-font-weight: bold;" HBox.hgrow="ALWAYS"/>
                                                <Label text="Waiting" style="-fx-background-color: #e1f8e9; -fx-text-fill: #1b9a55; -fx-padding: 4 10; -fx-background-radius: 999;"/>
                                            </children>
                                        </HBox>
                                        <HBox spacing="16" style="-fx-text-fill: #6b7280; -fx-font-size: 12;">
                                            <children>
                                                <Label text="1/2 players"/>
                                                <Label text="10 min"/>
                                                <Label text="Any level"/>
                                            </children>
                                        </HBox>
                                        <Button text="Join Game" maxWidth="Infinity" style="-fx-background-color: #005b63; -fx-text-fill: white; -fx-background-radius: 999;"/>
                                    </children>
                                </VBox>

                                <!-- More static sample cards; sau này có thể tạo động bằng ListView -->
                                <VBox prefWidth="340" spacing="12" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.04), 8, 0.1, 0, 2);">
                                    <children>
                                        <HBox alignment="CENTER_LEFT" spacing="8">
                                            <children>
                                                <Label text="Blitz Battle" style="-fx-font-size: 16; -fx-font-weight: bold;" HBox.hgrow="ALWAYS"/>
                                                <Label text="Ranked" style="-fx-background-color: #ffe3d1; -fx-text-fill: #d96b2b; -fx-padding: 4 10; -fx-background-radius: 999;"/>
                                                <Label text="Playing" style="-fx-background-color: #e0ebff; -fx-text-fill: #2563eb; -fx-padding: 4 10; -fx-background-radius: 999;"/>
                                            </children>
                                        </HBox>
                                        <HBox spacing="16" style="-fx-text-fill: #6b7280; -fx-font-size: 12;">
                                            <children>
                                                <Label text="2/2 players"/>
                                                <Label text="5 min"/>
                                                <Label text="Any level"/>
                                            </children>
                                        </HBox>
                                        <Button text="Spectate" maxWidth="Infinity" style="-fx-background-color: #9ca3af; -fx-text-fill: white; -fx-background-radius: 999;"/>
                                    </children>
                                </VBox>
                            </children>
                        </FlowPane>
                    </content>
                </ScrollPane>
            </children>
        </VBox>
    </center>
</BorderPane>
