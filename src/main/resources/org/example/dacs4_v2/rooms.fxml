<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600" prefWidth="1024" style="-fx-background-color: #f6f8fb;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.dacs4_v2.viewModels.RoomsController">
    <!-- Sidebar -->
    <left>
        <VBox prefWidth="220" spacing="8" style="-fx-background-color: white; -fx-padding: 24 16;">
            <children>
                <Label style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #094c4c;" text="Go Game Online" />
                <Separator />

                <ToggleButton maxWidth="Infinity" onAction="#onGoDashboard" 
                    style="-fx-cursor: hand; -fx-background-color: transparent; -fx-text-fill: #374151; -fx-background-radius: 8;" text="Dashboard" />
                <ToggleButton maxWidth="Infinity" onAction="#onGoRooms" selected="true" 
                    style="-fx-cursor: hand; -fx-background-color: #e0f2fe; -fx-text-fill: #0369a1; -fx-font-weight: bold; -fx-background-radius: 8;" text="Games" />
                <ToggleButton maxWidth="Infinity" onAction="#onGoHistory" 
                    style="-fx-cursor: hand; -fx-background-color: transparent; -fx-text-fill: #374151; -fx-background-radius: 8;" text="History" />

                <Pane VBox.vgrow="ALWAYS" />
            </children>
        </VBox>
    </left>

    <!-- Top bar + content -->
    <center>
        <VBox spacing="16" style="-fx-padding: 24;">
            <children>
                <!-- Top bar -->
                <HBox alignment="CENTER_RIGHT" spacing="16">
                    <children>
                        <Label style="-fx-font-size: 22; -fx-font-weight: bold;" text="Games" HBox.hgrow="ALWAYS" />
                        <Label style="-fx-background-color: #e1f8e9; -fx-text-fill: #1b9a55; -fx-padding: 6 12; -fx-background-radius: 999;" text="Online" />
                        <Button onAction="#onPlayAI" style="-fx-cursor: hand; -fx-background-color: #ffe3d1; -fx-text-fill: #d96b2b; -fx-background-radius: 999;" text="Play AI" />
                        <Button onAction="#onCreateRoom" style="-fx-cursor: hand; -fx-background-color: #005b63; -fx-text-fill: white; -fx-background-radius: 999;" text="Invite Game" />
                    </children>
                </HBox>

                <!-- Search & filters -->
                <HBox alignment="CENTER_LEFT" spacing="12">
                    <children>
                        <TextField fx:id="searchField" promptText="Search games..." HBox.hgrow="ALWAYS" />
                        <ToggleButton selected="true" text="All" />
                    </children>
                </HBox>

                <!-- Games list -->
                <ScrollPane fitToWidth="true" hbarPolicy="NEVER" VBox.vgrow="ALWAYS">
                    <content>
                        <FlowPane fx:id="gamesFlow" hgap="16" vgap="16">
                            <padding>
                                <Insets bottom="4" left="4" right="4" top="4" />
                            </padding>
                        </FlowPane>
                    </content>
                </ScrollPane>
            </children>
        </VBox>
    </center>
</BorderPane>
