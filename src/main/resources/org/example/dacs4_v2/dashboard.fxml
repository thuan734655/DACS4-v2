<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600" prefWidth="1024" style="-fx-background-color: #f6f8fb;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.dacs4_v2.viewModels.DashboardController">
    <!-- Sidebar -->
    <left>
        <VBox prefWidth="220" spacing="8" style="-fx-background-color: white; -fx-padding: 24 16;">
            <children>
                <Label style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #094c4c;" text="Go Game Online" />
                <Separator />

                <ToggleButton maxWidth="Infinity" onAction="#onGoDashboard" selected="true" 
                    style="-fx-cursor: hand; -fx-background-color: #e0f2fe; -fx-text-fill: #0369a1; -fx-font-weight: bold; -fx-background-radius: 8;" text="Dashboard" />
                <ToggleButton maxWidth="Infinity" onAction="#onGoRooms" 
                    style="-fx-cursor: hand; -fx-background-color: transparent; -fx-text-fill: #374151; -fx-background-radius: 8;" text="Games" />
                <ToggleButton maxWidth="Infinity" onAction="#onGoHistory" 
                    style="-fx-cursor: hand; -fx-background-color: transparent; -fx-text-fill: #374151; -fx-background-radius: 8;" text="History" />

                <Pane VBox.vgrow="ALWAYS" />
            </children>
        </VBox>
    </left>

    <!-- Main content -->
    <center>
        <VBox spacing="16" style="-fx-padding: 24;">
            <children>
                <!-- Header + status -->
                <HBox alignment="CENTER_RIGHT" spacing="16">
                    <children>
                        <VBox spacing="4" HBox.hgrow="ALWAYS">
                            <children>
                                <Label style="-fx-font-size: 24; -fx-font-weight: bold;" text="Welcome Back" />
                            </children>
                        </VBox>
                        <Label fx:id="lblUserInfo" style="-fx-text-fill: #374151;" text="Guest" />
                        <Label style="-fx-background-color: #e1f8e9; -fx-text-fill: #1b9a55; -fx-padding: 6 12; -fx-background-radius: 999;" text="Online" />
                    </children>
                </HBox>

                <!-- Top cards: New Game / Play with AI -->
                <HBox spacing="16">
                    <children>
                        <VBox spacing="12" style="-fx-background-color: white; -fx-background-radius: 16; -fx-padding: 16;" HBox.hgrow="ALWAYS">
                            <children>
                                <Label style="-fx-font-size: 16; -fx-font-weight: bold;" text="New Game" />
                                <Label style="-fx-text-fill: #6b7280;" text="Create a room or join an existing one" />
                                <Button maxWidth="Infinity" onAction="#onStartPlaying" style="-fx-cursor: hand; -fx-background-color: #005b63; -fx-text-fill: white; -fx-background-radius: 999;" text="Start Playing" />
                            </children>
                        </VBox>
                        <VBox spacing="12" style="-fx-background-color: #fff3e9; -fx-background-radius: 16; -fx-padding: 16;" HBox.hgrow="ALWAYS">
                            <children>
                                <Label style="-fx-font-size: 16; -fx-font-weight: bold;" text="Play with AI" />
                                <Label style="-fx-text-fill: #6b7280;" text="Train against challenging AI opponents" />
                                <Button maxWidth="Infinity" onAction="#onChallengeAI" style="-fx-cursor: hand; -fx-background-color: #f97316; -fx-text-fill: white; -fx-background-radius: 999;" text="Challenge AI" />
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <!-- Stats row -->
                <HBox spacing="16">
                    <children>
                        <VBox alignment="CENTER" spacing="4" style="-fx-background-color: white; -fx-background-radius: 16; -fx-padding: 12;" HBox.hgrow="ALWAYS">
                            <children>
                                <Label style="-fx-text-fill: #6b7280;" text="Total Games" />
                                <Label fx:id="lblTotalGames" style="-fx-font-size: 20; -fx-font-weight: bold;" text="0" />
                            </children>
                        </VBox>
                        <VBox alignment="CENTER" spacing="4" style="-fx-background-color: white; -fx-background-radius: 16; -fx-padding: 12;" HBox.hgrow="ALWAYS">
                            <children>
                                <Label style="-fx-text-fill: #6b7280;" text="Win Rate" />
                                <Label fx:id="lblWinRate" style="-fx-font-size: 20; -fx-font-weight: bold;" text="-" />
                            </children>
                        </VBox>
                        <VBox alignment="CENTER" spacing="4" style="-fx-background-color: white; -fx-background-radius: 16; -fx-padding: 12;" HBox.hgrow="ALWAYS">
                            <children>
                                <Label style="-fx-text-fill: #6b7280;" text="Current Rank" />
                                <Label fx:id="lblCurrentRank" style="-fx-font-size: 20; -fx-font-weight: bold;" text="-" />
                            </children>
                        </VBox>
                        <VBox alignment="CENTER" spacing="4" style="-fx-background-color: white; -fx-background-radius: 16; -fx-padding: 12;" HBox.hgrow="ALWAYS">
                            <children>
                                <Label style="-fx-text-fill: #6b7280;" text="Online Friends" />
                                <Label fx:id="lblOnlineFriends" style="-fx-font-size: 20; -fx-font-weight: bold;" text="0" />
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <!-- Online players list -->
                <VBox spacing="12">
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="8">
                            <children>
                                <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="Online Players" />
                            </children>
                        </HBox>
                        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" prefHeight="220">
                            <content>
                                <VBox fx:id="playersContainer" spacing="8" />
                            </content>
                        </ScrollPane>
                    </children>
                </VBox>
            </children>
        </VBox>
    </center>
</BorderPane>
